<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/development_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent">

    <TextView
        android:id="@+id/tv_dev_level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="SCOUT" />

    <TextView
        android:id="@+id/tv_equipment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="LIGHT BOW" />

    <LinearLayout
        android:id="@+id/chits1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp" >

        <include
            android:id="@+id/chit1"
            layout="@layout/chit_layout" />

        <include
            android:id="@+id/chit2"
            layout="@layout/chit_layout" />

        <include
            android:id="@+id/chit3"
            layout="@layout/chit_layout" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dev_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="SCOUT" />

    <TextView
        android:id="@+id/tv_equipment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="LIGHT BOW" />

    <LinearLayout
        android:id="@+id/chits2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp" >

        <include
            android:id="@+id/chit4"
            layout="@layout/chit_layout" />

        <include
            android:id="@+id/chit5"
            layout="@layout/chit_layout" />

        <include
            android:id="@+id/chit6"
            layout="@layout/chit_layout" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dev_level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="SCOUT" />

    <TextView
        android:id="@+id/tv_equipment3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="LIGHT BOW" />

    <LinearLayout
        android:id="@+id/chits3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp" >

        <include
            android:id="@+id/chit7"
            layout="@layout/chit_layout" />

        <include
            android:id="@+id/chit8"
            layout="@layout/chit_layout" />

        <include
            android:id="@+id/chit9"
            layout="@layout/chit_layout" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dev_level4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="SCOUT" />

    <TextView
        android:id="@+id/tv_equipment4"
        android:layout_width="wrap_content"
