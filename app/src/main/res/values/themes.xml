<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LostRealm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/macondo</item>
    </style>

    <style name="Base.Theme.Chit" parent="Base.Theme.LostRealm">
        <item name="android:layout_width">wrap_content</item>"
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.Theme.Spell" parent="Base.Theme.LostRealm">
        <item name="android:layout_width">wrap_content</item>"
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:layout_gravity">center</item>">
        <item name="android:gravity">center</item>">
        <item name="android:fontFamily">@font/agdasima</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Base.Theme.LostRealm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AlertDialogStyle.NoActionBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Base.Theme.LostRealm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.LostRealm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>